<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/old_blue"
    android:padding="16dp"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raihan"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textColor="@color/blue"
                android:inputType="phone"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawablePadding="8dp"/>


            <TextView
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cibeber"
                android:textColor="@color/blue"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:drawableStart="@drawable/ic_baseline_location_city_24"
                android:drawablePadding="8dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginVertical="16dp"/>

            <TextView
                android:id="@+id/keperluan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apa aja"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginVertical="16dp"/>

            <TextView
                android:id="@+id/lainnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum Diterima"
                android:textColor="@color/yellow"
                android:textSize="18sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/white"
                android:background="@color/yellow"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
