<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bukutamu">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/buku_tamu"
        android:label="@string/app_name"
        android:roundIcon="@drawable/buku_tamu"
        android:supportsRtl="true"
        android:theme="@style/Theme.BukuTamu"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.BukuTamu.NoActionBar"/>
        <activity android:name=".ui.dashboard.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.DASHBOARD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Define activity for TamuActivity -->
        <activity android:name=".ui.tamu.TamuActivity">
            <intent-filter>
                <action android:name="android.intent.action.TAMU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Define activity for LogoutActivity -->
        <activity android:name=".ui.logout.LogoutActivity">
            <intent-filter>
                <action android:name="android.intent.action.LOGOUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>